{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types", "*/src/**/types.d.ts"],
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "dist"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
