{
    "compilerOptions": {
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types",
        ],
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}