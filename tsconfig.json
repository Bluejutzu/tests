{
    "compilerOptions": {
        "outDir": "dist",
        "typeRoots": ["./node_modules/@types"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ESNext",
        "noEmit": false,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": "./src/"
    },
    "include": ["src/**/*"]
}
